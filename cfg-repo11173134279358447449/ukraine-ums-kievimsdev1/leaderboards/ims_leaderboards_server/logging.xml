<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" debug="true">
    <jmxConfigurator />


    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg %X{leaderboardId} %n</pattern>
            <immediateFlush>false</immediateFlush>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/leaderboard-server.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>logs/leaderboard-server.%i.log.gz</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>40</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1000MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg %X{leaderboardId} %n</pattern>
            <immediateFlush>false</immediateFlush>
        </encoder>
    </appender>

    <appender name="async-file" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>4096</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="file"/>
    </appender>




    <logger name="com.playtech.crossteam.boot.Boot" additivity="true">
        <level value="DEBUG"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="com.playtech.crossteam.boot.StandaloneConnector" additivity="true">
        <level value="DEBUG"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="com.playtech.crossteam">
        <level value="DEBUG"/>
    </logger>
    
     <logger name="com.playtech.ums.leaderboards">
        <level value="DEBUG"/>
    </logger>
    
    

    <!--<logger name="org.apache.kafka" additivity="true">-->
      <!--<level value="DEBUG" />-->
    <!--</logger>-->

    <root>
        <level value="INFO"/>
        <appender-ref ref="async-file"/>
    </root>
</configuration>
