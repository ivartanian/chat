<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" debug="true">
    <jmxConfigurator />


    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%thread] %.-5level %logger{0} - %msg %X{brandName} %X{userName} %X{eventType} %X{eventId} %n</pattern>
            <immediateFlush>false</immediateFlush>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/journey-server.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>logs/journey-server.%i.log.gz</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>40</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1000MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%date [%thread] %.-5level %logger{0} - %msg %X{brandName} %X{userName} %X{eventType} %X{eventId} %n</pattern>
            <immediateFlush>false</immediateFlush>
        </encoder>
    </appender>

    <appender name="async-file" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>4096</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="file"/>
    </appender>
    
        <appender name="sentry" class="io.sentry.logback.SentryAppender">
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <level>ERROR</level>
            <OnMismatch>DENY</OnMismatch>
            <evaluator class="com.playtech.journey.common.logging.OnErrorJourneyEvaluator"/>
        </filter>
    </appender>
  


    <logger name="com.playtech.crossteam.boot.Boot" additivity="true">
        <level value="DEBUG"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="com.playtech.crossteam.boot.StandaloneConnector" additivity="true">
        <level value="DEBUG"/>
        <appender-ref ref="console"/>
    </logger>
    <logger name="com.playtech.crossteam.transport.GalaxyRxClientWrapper" level="DEBUG"/>

    <logger name="com.playtech.crossteam">
        <level value="DEBUG"/>
    </logger>

    <logger name="journey">
        <level value="INFO"/>
    </logger>
    <appender name="central" class="ch.qos.logback.core.net.CentralLoggingKafkaAppender">
       
    </appender>

    <root>
        <level value="INFO"/>
        <appender-ref ref="async-file" />
       <appender-ref ref="central" />
       <appender-ref ref="sentry" />
       
    </root>
</configuration>
